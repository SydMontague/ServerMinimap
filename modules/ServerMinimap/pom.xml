<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>serverminimap-plugin</artifactId>
  <groupId>de.craftlancer</groupId>
  <version>0.7.2</version>
  <name>ServerMinimap</name>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>serverminimap</artifactId>
    <groupId>de.craftlancer</groupId>
    <version>parent</version>
    <relativePath>../../</relativePath>
  </parent>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>de.craftlancer</groupId>
      <artifactId>serverminimap-nmshandler</artifactId>
      <version>API</version>
    </dependency>
    <dependency>
      <groupId>de.craftlancer</groupId>
      <artifactId>serverminimap-v1.5-R3</artifactId>
      <version>v1.5-R3</version>
    </dependency>
    <dependency>
      <groupId>de.craftlancer</groupId>
      <artifactId>serverminimap-v1.6-R3</artifactId>
      <version>v1.6-R3</version>
    </dependency>
    <dependency>
      <groupId>de.craftlancer</groupId>
      <artifactId>serverminimap-v1.7-R1</artifactId>
      <version>v1.7-R1</version>
    </dependency>
    <dependency>
      <groupId>de.craftlancer</groupId>
      <artifactId>serverminimap-v1.7-R2</artifactId>
      <version>v1.7-R2</version>
    </dependency>    
    <dependency>
      <groupId>de.craftlancer</groupId>
      <artifactId>serverminimap-v1.7-R3</artifactId>
      <version>v1.7-R3</version>
    </dependency>
  </dependencies>

  <build>
    <directory>../../target</directory>
    <sourceDirectory>../../src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>../../src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.mcstats</pattern>
                  <shadedPattern>de.craftlancer.serverminimap.metrics</shadedPattern>
                </relocation>
              </relocations>

              <artifactSet>
                <includes>
                  <include>de.craftlancer:serverminimap*</include>
                  <include>org.mcstats.bukkit:*</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>